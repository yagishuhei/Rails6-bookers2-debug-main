<h2>Books search results</h2>

<table class="table table-hover table-inverse">
  <!--検索対象モデルUserの時 -->
  <% if @range == "User" %>
    <tbody>
      <% @users.each do |user| %>

        <tr>
           <td><%= image_tag user.get_profile_image(50,50) %></td>
          <td><%= user.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
  <!--対象モデルがBookの時 -->
    <tbody>
      <% @books.each do |book| %>
        <tr>
           <td><%= image_tag book.user.get_profile_image(50,50) %></td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>